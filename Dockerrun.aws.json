{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image": "vasavag/multi-client",
            "hostname": "client",
            "essential": false,
            "memory"   : 128
        },
        {
            "name" : "server",
            "image": "vasavag/multi-server",
            "hostname": "api",
            "essential": false,
            "memory"   : 128
        },
        {
            "name" : "worker",
            "image": "vasavag/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory"   : 128
        },
        {
            "name" : "nginx",
            "image" : "vasavag/multi-nginx",
            "essential" : true,
            "portMappings":[
                {
                    "hostPort" : 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory"   : 128
        }
    ]
}